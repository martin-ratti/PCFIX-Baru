---
import { Image } from 'astro:assets';
import logo from '../../assets/logo.png'; 
import CartIcon from '../cart/CartIcon.tsx'; 
import UserMenu from '../auth/UserMenu.tsx'; 
// Importamos las dos barras de navegación
import AdminLinks from '../admin/AdminLinks.tsx';
import StoreNavigation from './StoreNavigation.tsx';
---

<header class="bg-accent shadow-lg sticky top-0 z-50" transition:persist id="main-header">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <div>
      <a href="/">
        <Image src={logo} alt="PCFIX Logo" width="120" />
      </a>
    </div>
    
    <div class="hidden md:flex items-center justify-center flex-1 px-8">
      {/* Aquí sucede la magia:
          - Si es Admin: AdminLinks se renderiza, StoreNavigation devuelve null.
          - Si es User: AdminLinks devuelve null, StoreNavigation se renderiza.
      */}
      <AdminLinks client:load />
      <StoreNavigation client:load /> 
    </div>

    <div class="flex items-center gap-6">
      {/* El carrito ya tiene lógica interna para ocultarse si es Admin */}
      <CartIcon client:load />
      <UserMenu client:load />
    </div>
  </nav>
</header>