---
import {
  TruckIcon,
  ShieldIcon,
  CreditCardIcon,
  HeadphonesIcon,
} from "../../SharedIcons";

const features = [
  {
    icon: TruckIcon,
    title: "Envíos a todo el país",
    description: "Recibí tu compra donde estés",
  },
  {
    icon: ShieldIcon,
    title: "Garantía Oficial",
    description: "Todos nuestros productos tienen garantía",
  },
  {
    icon: CreditCardIcon,
    title: "Pagos Seguros",
    description: "Todas las tarjetas, transferencia y efectivo",
  },
  {
    icon: HeadphonesIcon,
    title: "Atención Personalizada",
    description: "Asesoramiento experto pre y post venta",
  },
];
---

<section class="py-12 bg-white border-b border-gray-100">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        features.map((feature) => (
          <div class="flex items-center gap-4 p-4 rounded-xl hover:bg-gray-50 transition-colors group">
            <div class="p-3 bg-blue-50 text-blue-600 rounded-lg group-hover:scale-110 transition-transform duration-300">
              <feature.icon className="w-6 h-6" />
            </div>
            <div>
              <h3 class="font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
                {feature.title}
              </h3>
              <p class="text-sm text-gray-500">{feature.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
