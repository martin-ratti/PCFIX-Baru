---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png'; 
import CartIcon from './CartIcon.tsx'; // Importamos el nuevo componente
---

<header class="bg-accent shadow-lg">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <div>
      <a href="/">
        <Image src={logo} alt="PCFIX Logo" width="120" />
      </a>
    </div>
    <div class="hidden md:flex items-center space-x-6">
      <a href="/productos" class="text-secondary hover:text-primary transition-colors duration-300">Productos</a>
      <a href="/nosotros" class="text-secondary hover:text-primary transition-colors duration-300">Nosotros</a>
      <a href="/contacto" class="text-secondary hover:text-primary transition-colors duration-300">Contacto</a>
    </div>
    <div>
      {/* Reemplazamos el 'a' por el componente interactivo */}
      <CartIcon client:load />
    </div>
  </nav>
</header>