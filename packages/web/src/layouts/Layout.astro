---
// 2. Imports de Utilidades y Estilos
import { Toaster } from 'sonner'; // üîî CR√çTICO: Para que se vean las notificaciones
import '../styles/global.css';    // Estilos globales (Tailwind)

// 3. View Transitions (Opcional pero recomendado para SPA-feel)
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="PCFIX - Hardware High-End y Servicio T√©cnico Especializado" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		{/* Habilita transiciones suaves entre p√°ginas */}
		<ClientRouter />
	</head>
	
	<body class="bg-gray-50 min-h-screen flex flex-col text-gray-900 selection:bg-primary/20">
		
		{/* üîî TOASTER: Aqu√≠ es donde se renderizan los popups.
            - client:load => Se hidrata inmediatamente.
            - richColors => Usa colores verde/rojo para √©xito/error.
            - position => Donde aparece (arriba al centro es lo standard).
        */}
		<Toaster client:load position="top-center" richColors closeButton />		
		{/* El slot renderiza el contenido de cada p√°gina */}
		<div class="flex-1">
			<slot />
		</div>

	</body>
</html>