---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

import ToastContainer from "../components/ui/feedback/ToastContainer";
import CartSync from "../components/store/CartSync";
import WhatsAppButton from "../components/ui/feedback/WhatsAppButton";
import Header from "../components/ui/layout/Header.astro";
import Footer from "../components/ui/layout/Footer.astro";

interface Props {
    title: string;
    description?: string;
    image?: string;
    price?: number;
}

const {
    title,
    description = "Tu tienda de confianza para hardware y tecnolog√≠a.",
    image = "/logo.png",
    price,
} = Astro.props;

const siteUrl = import.meta.env.SITE || "https://pcfixbaru.com.ar";
const absoluteImageUrl = image.startsWith("http")
    ? image
    : `${siteUrl}${image}`;
const canonicalURL = new URL(Astro.url.pathname, siteUrl);


const SERVER_API_URL =
    import.meta.env.PUBLIC_API_URL || "http://localhost:3002/api";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/logo.png" />
        <meta name="generator" content={Astro.generator} />

        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <meta property="og:type" content={price ? "product" : "website"} />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={absoluteImageUrl} />
        <meta property="og:site_name" content="PC FIX" />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={absoluteImageUrl} />

        {
            price && (
                <>
                    <meta
                        property="product:price:amount"
                        content={price.toString()}
                    />
                    <meta property="product:price:currency" content="ARS" />
                </>
            )
        }

        <ClientRouter />
        <slot name="head" />
    </head>

    <body
        class="bg-gray-50 min-h-screen flex flex-col text-gray-900 selection:bg-primary/20"
    >
        <Header />

        <ToastContainer client:load />
        <CartSync client:only="react" />
        <WhatsAppButton />

        <div class="flex-1">
            <slot />
        </div>

        <Footer />

        <script is:inline define:vars={{ API_BASE: SERVER_API_URL }}>
            
            async function checkMaintenance() {
                try {
                    
                    const res = await fetch(`${API_BASE}/config`);

                    if (!res.ok) return;
                    const json = await res.json();
                    const maintenanceMode =
                        json.success && json.data?.maintenanceMode;

                    if (maintenanceMode) {
                        const path = window.location.pathname.toLowerCase();

                        
                        if (
                            path.includes("/mantenimiento") ||
                            path.includes("/auth/login") ||
                            path.includes("/auth/registro") ||
                            path.includes("/admin")
                        )
                            return;

                        
                        let isAdmin = false;
                        try {
                            const storage =
                                localStorage.getItem("auth-storage");
                            if (storage) {
                                const parsed = JSON.parse(storage);
                                if (parsed.state?.user?.role === "ADMIN")
                                    isAdmin = true;
                            }
                        } catch (e) {}

                        if (!isAdmin) {
                            window.location.href = "/mantenimiento";
                        }
                    } else {
                        if (window.location.pathname === "/mantenimiento") {
                            window.location.href = "/";
                        }
                    }
                } catch (e) {
                    console.error("Maintenance check failed", e);
                }
            }

            checkMaintenance();
            document.addEventListener("astro:page-load", checkMaintenance);
        </script>
    </body>
</html>
