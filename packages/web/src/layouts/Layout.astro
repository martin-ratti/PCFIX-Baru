---
import '../styles/global.css';
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
import 'swiper/css/effect-fade';

import { ViewTransitions } from 'astro:transitions';
import ToastContainer from '../components/ui/feedback/ToastContainer.tsx';
import FavoritesInitializer from '../components/ui/feedback/FavoritesInitializer.tsx';
import WhatsAppButton from '../components/ui/feedback/WhatsAppButton.tsx';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<ViewTransitions />

		<title>{title}</title>

		<style is:global>
			.swiper-wrapper { margin-bottom: 40px; }
			.swiper-pagination { bottom: 0px !important; padding-bottom: 4px; }
			.swiper-pagination-bullet-active {
				background-color: #121D40 !important;
				width: 10px; height: 10px;
			}
			.swiper-button-prev, .swiper-button-next {
				background-color: #96B3D9; width: 44px; height: 44px;
				border-radius: 9999px;
				box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
				top: 45% !important; 
			}
			.swiper-button-prev::after, .swiper-button-next::after {
				font-size: 1.25rem !important; font-weight: 800 !important; color: #121D40;
			}
			.swiper-button-prev { left: 0px; }
			.swiper-button-next { right: 0px; }
			.brand-swiper-container .swiper-wrapper {
				transition-timing-function: linear !important;
			}
		</style>
	</head>
	
	<body class="bg-light text-secondary font-sans" transition:animate="none">
		<div transition:persist>
			<ToastContainer client:load />
			<FavoritesInitializer client:load />
			<WhatsAppButton client:load />
		</div>
		<slot />
	</body>
</html>