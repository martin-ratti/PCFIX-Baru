---
import '../styles/global.css';
// Si el editor sigue marcando error aquí, ignóralo si ya actualizaste env.d.ts,
// Vite lo procesará correctamente al ejecutar.
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<ViewTransitions />

		<title>{title}</title>

		<style is:global>
			/* Estilos globales para Swiper */
			.swiper-pagination {
				bottom: 12px !important;
			}

			.swiper-pagination-bullet-active {
				background-color: #121D40 !important;
			}

			/* Flechas de navegación personalizadas */
			.swiper-button-prev,
			.swiper-button-next {
				background-color: #96B3D9; /* Color 'accent' */
				width: 44px;
				height: 44px;
				border-radius: 9999px;
				box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
			}

			.swiper-button-prev::after,
			.swiper-button-next::after {
				font-size: 1.25rem !important;
				font-weight: 800 !important;
				color: #121D40; /* Color 'primary' */
			}

			.swiper-button-prev {
				left: 0px;
			}

			.swiper-button-next {
				right: 0px;
			}
		</style>
	</head>
	
	<body class="bg-light text-secondary font-sans" transition:animate="fade">
		<slot />
	</body>
</html>