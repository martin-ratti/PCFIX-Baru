---
import '../styles/global.css';
// Estilos de Swiper necesarios globalmente
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
import 'swiper/css/effect-fade';

import { ViewTransitions } from 'astro:transitions';
import ToastContainer from '../components/shared/ToastContainer.tsx';
import FavoritesInitializer from '../components/shared/FavoritesInitializer.tsx';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<ViewTransitions />

		<title>{title}</title>

		<style is:global>
			/* Estilos globales para Swiper */
			.swiper-wrapper {
				margin-bottom: 40px;
			}

			.swiper-pagination {
				bottom: 0px !important;
				padding-bottom: 4px;
			}

			.swiper-pagination-bullet-active {
				background-color: #121D40 !important;
				width: 10px;
				height: 10px;
			}

			/* Flechas de navegación personalizadas */
			.swiper-button-prev,
			.swiper-button-next {
				background-color: #96B3D9; /* Color 'accent' */
				width: 44px;
				height: 44px;
				border-radius: 9999px;
				box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
				top: 45% !important; 
			}

			.swiper-button-prev::after,
			.swiper-button-next::after {
				font-size: 1.25rem !important;
				font-weight: 800 !important;
				color: #121D40; /* Color 'primary' */
			}

			.swiper-button-prev { left: 0px; }
			.swiper-button-next { right: 0px; }

			/* Animación lineal para el carrusel de marcas */
			.brand-swiper-container .swiper-wrapper {
				transition-timing-function: linear !important;
			}
		</style>
	</head>
	
	<body class="bg-light text-secondary font-sans" transition:animate="fade">
		
		<div transition:persist>
			<ToastContainer client:load />
			<FavoritesInitializer client:load />
		</div>

		<slot />
	</body>
</html>