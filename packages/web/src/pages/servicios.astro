---
import Layout from '../layouts/Layout.astro';
import Header from '../components/ui/layout/Header.astro';
import Footer from '../components/ui/layout/Footer.astro';
import { Image } from 'astro:assets';

// Componentes Reactivos
import ServiceInquiryForm from '../components/store/profile/ServiceInquiryForm';
import ServicePriceList from '../components/store/profile/ServicePriceList';

// Imagen de ejemplo (puedes cambiarla por local)
const techImageURL = "https://images.unsplash.com/photo-1581092921461-eab62e97a783?q=80&w=1000&auto=format&fit=crop";
---

