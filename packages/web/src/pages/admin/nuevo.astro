---
export const prerender = false;

import Layout from "../../layouts/Layout.astro";

import CreateProductForm from "../../components/admin/products/CreateProductForm";
import AdminGuard from "../../components/guards/AdminGuard";
---

<Layout title="PCFIX | Nuevo Producto">
  <main class="container mx-auto px-6 py-12 bg-light min-h-screen">
    <div class="mb-8">
      <a
        href="/admin/productos"
        class="text-sm text-gray-500 hover:text-primary transition-colors mb-2 inline-flex items-center gap-1"
        >&larr; Volver al Inventario</a
      >
      <h1 class="text-3xl font-black text-primary mt-2">
        Agregar Nuevo Producto
      </h1>
    </div>
    <AdminGuard client:only="react">
      <CreateProductForm client:load />
    </AdminGuard>
  </main>
</Layout>
