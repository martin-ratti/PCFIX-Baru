---
export const prerender = false;
import Layout from "../../layouts/Layout.astro";

import PaymentForm from "../../components/store/checkout/PaymentForm";
import UserGuard from "../../components/guards/UserGuard";

const { id } = Astro.params;
---

<Layout title="PCFIX | Finalizar Pago">
  <main class="container mx-auto px-6 py-12 min-h-screen">
    <UserGuard client:only="react">
      <PaymentForm saleId={Number(id)} client:load />
    </UserGuard>
  </main>
</Layout>
