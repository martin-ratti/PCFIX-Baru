---
import { Image } from 'astro:assets';
import logo from '../assets/logoBaru.jpg';
---

<header class="bg-secondary shadow-lg">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <div>
      <a href="/">
        <Image src={logo} alt="PCFIX Logo" width="120" />
      </a>
    </div>
    <div class="hidden md:flex items-center space-x-6">
      <a href="/productos" class="text-light hover:text-accent transition-colors duration-300">Productos</a>
      <a href="/nosotros" class="text-light hover:text-accent transition-colors duration-300">Nosotros</a>
      <a href="/contacto" class="text-light hover:text-accent transition-colors duration-300">Contacto</a>
    </div>
    <div>
      <a href="/carrito" class="bg-accent text-secondary font-bold py-2 px-4 rounded-lg hover:bg-opacity-80 transition-all duration-300">
        Carrito (0)
      </a>
    </div>
  </nav>
</header>