---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro'; // Importamos el Header
import Footer from '../../components/Footer.astro'; // Importamos el Footer
import { Image } from 'astro:assets';
import { allProducts } from '../../data/mock-data';
import AddToCart from '../../components/AddToCart.tsx';

export function getStaticPaths() {
  return allProducts.map(product => ({
    params: { slug: product.slug }
  }));
}

const { slug } = Astro.params;
const product = allProducts.find(p => p.slug === slug);

if (!product) {
  return new Response(null, {
    status: 404,
    statusText: 'No encontrado'
  });
}
---
<Layout title={`PCFIX | ${product.name}`}>
  <Header /> {/* Añadimos el Header */}

  <main class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-12 items-start">
      
      {/* Columna de la Imagen */}
      <div class="md:col-span-2 bg-white rounded-lg shadow-lg p-4">
        <Image 
          src={product.imageUrl} 
          alt={product.imageAlt}
          width={600}
          height={600}
          class="w-full h-auto object-contain aspect-square"
        />
      </div>

      {/* Columna de Información y Compra */}
      <div class="md:col-span-3">
        <h1 class="text-4xl font-black text-primary mb-4">{product.name}</h1>
        
        {product.originalPrice ? (
          <div class="flex items-baseline gap-4 mb-4">
            <p class="text-4xl font-bold text-red-500">${product.price.toLocaleString('es-AR')}</p>
            <p class="text-2xl text-muted line-through">${product.originalPrice.toLocaleString('es-AR')}</p>
          </div>
        ) : (
          <p class="text-4xl font-bold text-primary mb-4">${product.price.toLocaleString('es-AR')}</p>
        )}

        {/* --- CAMBIO DE ORDEN --- */}
        {/* 1. La descripción ahora va aquí */}
        <div class="mt-8 mb-6">
          <h2 class="text-2xl font-bold text-secondary mb-2">Descripción</h2>
          <p class="text-muted leading-relaxed">{product.description}</p>
        </div>

        {/* 2. El componente para agregar al carrito va después */}
        <AddToCart stock={product.stock} client:load />
      </div>
    </div>
  </main>

  <Footer /> {/* Añadimos el Footer */}
</Layout>